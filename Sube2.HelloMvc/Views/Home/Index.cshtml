@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4 mb-4">Öğrenci İşleri</h1>
        <p class="lead">Bu MVC projesi ile öğrenci ve ders işlemlerini kolayca yönetebilirsiniz.</p>
    </div>
    <div class="row my-4">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-plus fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Öğrenci Ekle</h5>
                    <p class="card-text">Yeni bir öğrenci eklemek için buraya tıklayın.</p>
                    <a href="/Student/AddStudent" class="btn btn-outline-primary">Öğrenci Ekle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-book-open fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Ders Ekle</h5>
                    <p class="card-text">Yeni bir ders eklemek için buraya tıklayın.</p>
                    <a href="/Ders/AddDers" class="btn btn-outline-success">Ders Ekle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-edit fa-3x text-warning"></i>
                    </div>
                    <h5 class="card-title">Öğrenci Düzenle</h5>
                    <p class="card-text">Var olan bir öğrenciyi düzenlemek için buraya tıklayın.</p>
                    <a href="/Student/EditStudent" class="btn btn-outline-warning">Öğrenci Düzenle</a>
                </div>
            </div>
        </div>
    </div>
</div>

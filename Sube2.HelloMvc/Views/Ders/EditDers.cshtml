@model Ders
@{
    ViewData["Title"] = "EditDers";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center py-3">
            <h2 class="mb-0">Dersleri Düzenle</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="EditDers" asp-controller="Ders" method="post">
                <input asp-for="Dersid" type="hidden" />
                <div class="mb-3">
                    <label for="DersKodu" class="form-label">Ders Kodu</label>
                    <input asp-for="DersKodu" class="form-control" id="DersKodu" placeholder="Ders kodunu giriniz" />
                </div>
                <div class="mb-3">
                    <label for="DersAd" class="form-label">Ders Adı</label>
                    <input asp-for="DersAd" class="form-control" id="DersAd" placeholder="Ders adını giriniz" />
                </div>
                <div class="mb-3">
                    <label for="Kredi" class="form-label">Kredi</label>
                    <input asp-for="Kredi" class="form-control" id="Kredi" placeholder="Ders kredisini giriniz" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg px-5">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
